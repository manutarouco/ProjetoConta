<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/conteiner"
    tools:context="com.example.a180801394.projetoconta.MainActivity">

    <CheckBox
        android:tag="50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ã¡gua 50"
        android:id="@+id/ck_agua"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <CheckBox
        android:tag="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="telefone 100"
        android:id="@+id/ck_telefone"
        android:layout_below="@+id/ck_agua"
        android:layout_alignRight="@+id/ck_agua"
        android:layout_alignEnd="@+id/ck_agua"
        android:checked="false" />

    <CheckBox
        android:tag="80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="luz 80"
        android:id="@+id/ck_luz"
        android:layout_below="@+id/ck_telefone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <CheckBox
        android:tag="50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="outros 50"
        android:id="@+id/ck_outros"
        android:layout_below="@+id/ck_luz"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:id="@+id/button"
        android:layout_below="@+id/ck_outros"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp"
        android:onClick="calcula" />
</RelativeLayout>
